<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cabral.marinho.meusfilmes">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity android:name=".InicioActivity"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ListaActivity"
            android:label="Lista" />
        <activity android:name=".HistoricoActivity"
            android:label="Histórico"/>
        <activity android:name=".FavoritosActivity"
            android:label="Favoritos"/>
        <activity android:name=".CreditosActivity"
            android:label="Créditos"/>
        <activity android:name=".DetalhesActivity"
            android:label="@string/detalhes_filme"></activity>
    </application>

</manifest>